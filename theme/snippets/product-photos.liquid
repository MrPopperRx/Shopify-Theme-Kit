<div class="product-gallery product-single__photos" data-slick='{
    "autoplay": {{ settings.product_carousel_autoplay }},
    "autoplaySpeed": {{ settings.product_carousel_autoplaySpeed }},
    "dots": {{ settings.product_carousel_dots }},
    "draggable": {{ settings.product_carousel_draggable }},
    "fade": {{ settings.product_carousel_fade }},
    "arrows": {{ settings.product_carousel_arrows }},
    "infinite": {{ settings.product_carousel_infinite }},
    "pauseOnHover": {{ settings.product_carousel_pauseOnHover }},
    "speed": {{ settings.product_carousel_speed }}}'>
  {% for image in product.images %}
    <div>
      <img src="{{ image.src | img_url: 'grande' }}" alt="{{ image.alt | escape }}" data-index="{{ forloop.index0 }}">
      {% if image.featured_image %}is variant{% endif %}
    </div>
  {% endfor %}
</div>
{% if product.images.size > 1 %}
  <div class="product-single__thumbnails" data-slick='{
    "slidesToShow": 4,
    "slidesToScroll": 1,
    "infinite": true,
    "focusOnSelect": true}'>
    {% for image in product.images %}
      <div>
        <a href="#" data-index="{{ forloop.index0 }}" {% for variant in image.variants | limit: 1 %} data-variantName="{{ variant.title }}"{% endfor %}>
          <img src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}">
        </a>
      </div>
    {% endfor %}
  </div>
{% endif %}
{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg" style="display: none;">