{% comment %}{% for variant in product.variants %}
  variant.title: {{ variant.title }}<br>
  variant.available: {{ variant.available }}<br>
  variant.image: {{ variant.image }}<br>
  variant.image.src: {{ variant.image.src }}
  <hr>
{% endfor %}
<hr>
<hr>
{% for image in product.images %}
  img.alt {{ image.alt }}<br>
  img.attached_to_variant? {{ image.attached_to_variant? }}<br>
  img.id {{ image.id }}<br>
  img.product_id {{ image.product_id }}<br>
  img.position {{ image.position }}<br>
  image.src: {{ image.src }}<br>
  img.variants {{ image.variants }}
  {% for variant in image.variants %}
    - variant.title: {{ variant.title }}<br>
    - variant.available: {{ variant.available }}<br>
    - variant.image: {{ variant.image }}<br>
    - variant.image.src: {{ variant.image.src }}
  {% endfor %}
  <hr>
{% endfor %}{% endcomment %}

<div class="product-gallery product-single__photos" data-slick='{
    "autoplay": false,
    "autoplaySpeed": 3000,
    "dots": false,
    "draggable": true,
    "fade": true,
    "arrows": true,
    "infinite": true,
    "pauseOnHover": false,
    "speed": 300}'>
    {% comment %}data-slick='{
    "autoplay": {{ settings.product_carousel_autoplay }},
    "autoplaySpeed": {{ settings.product_carousel_autoplaySpeed }},
    "dots": {{ settings.product_carousel_dots }},
    "draggable": {{ settings.product_carousel_draggable }},
    "fade": {{ settings.product_carousel_fade }},
    "arrows": {{ settings.product_carousel_arrows }},
    "infinite": {{ settings.product_carousel_infinite }},
    "pauseOnHover": {{ settings.product_carousel_pauseOnHover }},
    "speed": {{ settings.product_carousel_speed }}}'{% endcomment %}
  {% for image in product.images %}
    <div>
      <img src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}" id="{{ image.id }}">
      {% if image.featured_image %}is variant{% endif %}
    </div>
  {% endfor %}
</div>
{% if product.images.size > 1 %}
  <ul class="product-thumbnails product-single__thumbnails">
    {% for image in product.images %}
      <li>
        <a href="#" data-index="{{ forloop.index0 }}" data-id="{{ image.id }}" data-variant="{% if image.attached_to_variant? %}true{% else %}false{% endif %}">
          <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
        </a>
      </li>
    {% endfor %}
  </ul>
{% endif %}

{% comment %}
{% assign current_variant = product.selected_or_first_available_variant %}
<div class="product-single__photos" id="ProductPhoto">
  {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
  <img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
</div>
{% if product.images.size > 1 %}
  <ul class="product-single__thumbnails grid-uniform" id="ProductThumbs">
    {% for image in product.images %}
      <li class="grid__item one-quarter">
        <a href="{{ image.src | img_url: 'large' }}" class="product-single__thumbnail">
          <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
        </a>
      </li>
    {% endfor %}
  </ul>
{% endif %}
<hr>{% endcomment %}